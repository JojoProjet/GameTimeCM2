<Page
    x:Class="GameTimeCM2.GameConjugaison"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GameTimeCM2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignHeight="1318">


    <Page.Resources>
        <Storyboard x:ConnectionId='2' x:Name="StoryCard">
            <DoubleAnimation Duration="0:0:10" From="-10" To="-190" Storyboard.TargetProperty="(UIElement.Projection).(PlaneProjection.RotationX)" Storyboard.TargetName="Card" d:IsOptimized="True"/>
        </Storyboard>
    </Page.Resources>

    <Page.Background>
        <ThemeResource ResourceKey="ComboBoxBackgroundThemeBrush"/>
    </Page.Background>

    <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

        <TextBlock HorizontalAlignment="Center" Margin="0,96,0,0" Text="Jeu de conjugaison" TextWrapping="Wrap" VerticalAlignment="Stretch" FontSize="50"/>

        <TextBlock x:ConnectionId='3' x:Name="TextQuestion" HorizontalAlignment="Center" Margin="0,150,0,0" Text="Le texte que tu vas devoir trouvé hiih" TextWrapping="Wrap" VerticalAlignment="Stretch" FontSize="50"/>

        <StackPanel x:ConnectionId='4' x:Name="Cards" Orientation="Horizontal"  Height="450" VerticalAlignment="Stretch" HorizontalAlignment="Center" Margin="0,100,0,0">



        </StackPanel>

