        <StackPanel x:ConnectionId='18' Visibility="Visible" Name="Game" Opacity="1" Background="#FF6B88EC" Width="1000" Height="800" Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderBrush="#FF05877B" CornerRadius="10,10,10,10" BorderThickness="10,10,10,10" Padding="10,0,10,10">

            <TextBlock x:ConnectionId='19' x:Name="TitleArea" Text="LE TITRE" FontSize="60" TextDecorations="Underline" FontStyle="Italic" FontWeight="Normal" HorizontalAlignment="Center" VerticalAlignment="Stretch" />

