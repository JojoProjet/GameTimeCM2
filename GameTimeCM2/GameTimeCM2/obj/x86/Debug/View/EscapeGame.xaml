            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel x:ConnectionId='42' x:Name="Game2" Width="200" Height="250" Grid.Row="0" Grid.Column="0" Margin="10,10,10,10" Canvas.ZIndex="0" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
