                <Button x:ConnectionId='57' Visibility="Collapsed" x:Name="BtnGame8"                        Content="Entrez" HorizontalContentAlignment="Center" VerticalContentAlignment="Stretch" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="100" Margin="0,0,0,0" Background="#FF555502" BorderBrush="#FFB22F09" FocusVisualPrimaryBrush="#FF91540A" Foreground="#FFE65B0C" FontSize="26" />
